<h1 class="text-center mt-5">新商品追加</h1>
<div class="container mt-5" style="max-width: 500px;">
  <%= form_with model: @product, url: admin_products_path, method: :post, local: true, html: { multipart: true }, class: "needs-validation" do |f| %>
    <div class="mb-3">
      <%= f.label :name, '商品名', class: "form-label" %>
      <%= f.text_field :name, required: true, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :price, '商品価格', class: "form-label" %>
      <%= f.number_field :price, required: true, class: "form-control", min: 0 %>
    </div>
    <div class="mb-3">
      <%= f.label :description, '商品詳細', class: "form-label" %>
      <%= f.text_area :description, required: true, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :image, '商品画像', class: "form-label" %>
      <%= f.file_field :image, required: true, class: "form-control" %>
    </div>
    <%= f.submit '作成', class: "btn btn-primary" %>
    <%= link_to 'キャンセル', admin_products_path, class: "btn btn-outline-dark mt-auto"%>
  <% end %>
</div>
